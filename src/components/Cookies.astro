<div id='cookieConsentWidget'></div>

<!-- Global site tag (gtag.js) - Google Analytics -->
<script is:inline src="https://cdn.jsdelivr.net/gh/thekitchencodery/not-another-cookie-consent/dist/index.min.js"></script>
<script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-CK0FRY1N67"></script>
<script is:inline>
    var gtagId = 'G-CK0FRY1N67';

    // Disable tracking by default
    window['ga-disable-' + gtagId] = true;
    window.dataLayer = window.dataLayer || [];

    function gtag() {
        dataLayer.push(arguments);
    };
    gtag('js', new Date());

    let widget = new NotAnotherCookieConsent({
        target: document.getElementById('cookieConsentWidget'),
        props: {
        cookieName: "MinersOnlineCookieConsent",
        cookiePolicy: "/legal/privacy-policy",
        aboutCookies: "https://www.allaboutcookies.org/",
        // one of: is-primary, is-info, is-link, is-success, is-warning, is-danger, is-black
        theme: "is-danger",
        banner: {
            acceptButton: "Allow Cookies",
            optionsButton: "Options",
            headline: "Yeah, yeah you've heard it all before... this site uses cookies... bla... bla... bla...",
            strapline: "We'd like to use Google Analytics to monitor how the site performs, but the choice is yours."
        },
        optionPannel:{
            title: "Cookie Settings",
            preamble: "This website uses cookies to ensure you get the best experience.",
            button: "Save",
            aboutLabel: "About Cookies",
            policyLabel: "Privacy Policy",
            required: {
                title: "Necessary Cookies",
                label: "Necessary Cookies",
                text: "Necessary Cookies includes: Necessary / Essential Cookies, Cookies Policy / Notice Acceptance Cookies, and Functionality Cookies. More information can be read in our Privacy Policy."
            },
            analytics: {
                title: "Tracking and Analytics Cookies",
                label: "Allow Tracking and Analytics Cookies",
                text: "These Cookies allow us to track the activity on Our Service and store certain information to improve and analyze Our Service."
            }
        }
        },
        });

    widget.$on('nacc_event', (event) => {
        let analytics = event.detail.analytic;
        window['ga-disable-' + gtagId] = !analytics;
        if (analytics) {
            gtag('config', gtagId);
        }
    });
</script>